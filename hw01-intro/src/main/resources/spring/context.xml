<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="questionMapper" class="ru.otus.mapper.QuestionMapperCsv"/>
    <bean id="questionDao" class="ru.otus.dao.imp.QuestionDaoCSV">
        <property name="questionMapperCsv" ref="questionMapper"/>
        <property name="fileName" value="testQuestions.csv"/>
    </bean>
    <bean id="questionService" class="ru.otus.service.imp.QuestionServiceImp">
            <constructor-arg ref="questionDao"/>
    </bean>
</beans>